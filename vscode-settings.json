{
  "workbench.editor.labelFormat": "short",
    "workbench.startupEditor": "newUntitledFile",
    
    // Editor settings
    "editor.wordWrap": "on",
    "editor.fontSize": 12,
    "editor.lineHeight": 20,
    "editor.tabSize": 2,
    "editor.fontFamily": "JetBrains Mono, Fira Code",
    "editor.fontLigatures": true,
    "editor.renderLineHighlight": "gutter",
    "editor.semanticHighlighting.enabled": true,
    "editor.rulers": [80, 120],
    "editor.parameterHints.enabled": false,
    "editor.codeActionsOnSave": {
      "source.fixAll": true
    },
    "extensions.ignoreRecommendations": true,
    
    // VSCode stuff
    "breadcrumbs.enabled": true,
    "explorer.compactFolders": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "javascript.updateImportsOnFileMove.enabled": "never",
    "typescript.updateImportsOnFileMove.enabled": "never",
    
    // Emmet
    "emmet.syntaxProfiles": { "javascript": "jsx" },
    "emmet.includeLanguages": { "javascript": "javascriptreact" },
    
    // Extensions
    "diffEditor.ignoreTrimWhitespace": false,
    "material-icon-theme.folders.associations": {
      "domain": "core",
      "infra": "app",
      "main": "public",
      "presentation": "connection",
      "cryptography": "secure",
      "entities": "class",
      "migrations": "tools",
      "repositories": "mappings",
      "protocols": "resource",
      "useCases": "components",
      "adapters": "connection",
      "websockets": "pipe",
      "factories": "container",
      "globals": "global",
      "ui": "views"
    },
    "material-icon-theme.files.associations": {
      "ormconfig.json": "database",
      "tsconfig.json": "tune",
      ".lintstagedrc.json": "tune"
    },
    "workbench.editor.untitled.hint": "hidden",
    "polacode.transparentBackground": true,
    "polacode.shadow": "rgba(0, 0, 0, 0) 0px 0 0",
    "gitlens.advanced.messages": {
      "suppressImproperWorkspaceCasingWarning": true
    },
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "terminal.integrated.fontWeight": "500",
    "terminal.integrated.fontWeightBold": "normal",
    "terminal.integrated.fontFamily": "Fira Code",
    "workbench.colorTheme": "Dracula Pro (Van Helsing)",
    "workbench.iconTheme": "material-icon-theme",
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "java.jdt.ls.vmargs": "-XX:+UseParallelGC -XX:GCTimeRatio=4 -XX:AdaptiveSizePolicyWeight=90 -Dsun.zip.disableMemoryMapping=true -Xmx1G -Xms100m -javaagent:\"c:\\Users\\nikolas.alencar\\.vscode\\extensions\\gabrielbb.vscode-lombok-1.0.1\\server\\lombok.jar\"",
    "files.exclude": {
      "**/.classpath": true,
      "**/.project": true,
      "**/.settings": true,
      "**/.factorypath": true
    },
    "redhat.telemetry.enabled": true,
    "window.zoomLevel": 1
  }
